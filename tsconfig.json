{
  "compilerOptions": {
     "strict": true,
     "module": "commonjs",
     "target": "es2016",
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "sourceMap": true,
     "rootDir": "src",
     "outDir": "dist",
     "noEmitOnError": true,
     "typeRoots": [ "node_modules/@types" ],
     "types" : [ "node"],
     "lib": ["ES2015", "DOM", "ES2017"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}